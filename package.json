{
  "name": "kivik",
  "version": "2.0.0-alpha.6",
  "description": "An opinionated library and command-line utility for configuration CouchDB endpoints, databases, and design documents",
  "keywords": [
    "couchdb"
  ],
  "main": "./dist/index.js",
  "repository": "https://github.com/crkn-rcdr/kivik",
  "contributors": [
    {
      "name": "Sascha Adler",
      "email": "sadler@crkn.ca",
      "url": "https://github.com/SaschaAdler"
    },
    {
      "name": "Divya Krishnan",
      "email": "dkrishnan@crkn.ca",
      "url": "https://github.com/DivyaKrishnan26"
    }
  ],
  "license": "Unlicense",
  "bin": {
    "kivik": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "ava": "ava -v",
    "build:publish": "rm -rf dist && tsc -b tsconfig.publish.json",
    "build:test": "rm -rf dist && tsc -b tsconfig.test.json",
    "test": "run-s build:test ava"
  },
  "dependencies": {
    "@crkn-rcdr/nano": "^2.0.1",
    "axios": "^0.21.1",
    "chokidar": "^3.5.1",
    "dockerode": "^3.2.1",
    "find-up": "^5.0.0",
    "fs-extra": "^9.1.0",
    "get-port": "^5.1.1",
    "p-event": "^4.2.0",
    "p-retry": "^4.5.0",
    "winston": "^3.3.3",
    "yaml": "^1.10.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/dockerode": "^3.2.3",
    "@types/fs-extra": "^9.0.10",
    "@types/node": "^14.14.37",
    "@types/yargs": "^16.0.1",
    "ajv": "^7.2.4",
    "ava": "^3.15.0",
    "nano": "^9.0.3",
    "npm-run-all": "^4.1.5",
    "type-fest": "^1.0.1",
    "typescript": "^4.2.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "ava": {
    "files": [
      "src/**/*.spec.ts"
    ],
    "typescript": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  }
}
