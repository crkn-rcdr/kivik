  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Inspect example directory",
      "program": "${workspaceFolder}/src/cli.js",
      "args": ["inspect", "${workspaceFolder}/example"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "--recursive"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
